<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/card_view_background"
    android:foreground="?android:attr/selectableItemBackground"
    android:elevation="5dp"
    android:clickable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <ImageView
            android:id="@+id/featured_card_image"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/dhawan"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/gradient"
            android:layout_alignLeft="@+id/featured_card_image"
            android:layout_alignRight="@+id/featured_card_image"
            android:layout_alignBottom="@+id/featured_card_image" />

        <TextView
            android:id="@+id/featured_card_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Android warriors "
            android:paddingBottom="4dp"
            android:paddingLeft="8dp"
            android:textColor="#f7f1f1"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="26sp"
            android:layout_above="@+id/featured_share_button"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/featured_share_button"
            android:src="@android:drawable/ic_menu_share"
            android:layout_marginRight="14dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_marginEnd="14dp"
            android:layout_alignTop="@+id/featured_time_stamp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/featured_time_stamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#f9f5f5"
            android:ellipsize="end"
            android:paddingBottom="16dp"
            android:paddingLeft="16dp"
            android:paddingStart="16dp"
            android:text="1 day ago."
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="20sp"
            android:layout_alignBottom="@+id/featured_card_image"
            android:layout_toRightOf="@+id/featured_coc_logo"
            android:layout_toEndOf="@+id/featured_coc_logo" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/featured_coc_logo"
            android:paddingBottom="5dp"
            android:src="@drawable/coc_logo"
            android:layout_below="@+id/featured_card_title"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/badButton"
            android:src="@drawable/ic_add_white_24dp"
            android:layout_marginRight="21dp"
            android:layout_marginEnd="21dp"
            android:layout_below="@+id/featured_card_title"
            android:layout_toLeftOf="@+id/featured_share_button"
            android:layout_toStartOf="@+id/featured_share_button" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
