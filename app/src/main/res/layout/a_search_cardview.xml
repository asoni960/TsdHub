<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/card_view_background"
    android:foreground="?android:attr/selectableItemBackground"
    android:elevation="5dp"
    android:clickable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:id="@+id/search_cardImage"
            android:adjustViewBounds="true"
            android:src="@drawable/wallhaven258231"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/gradient"
            android:layout_alignLeft="@+id/search_cardImage"
            android:layout_alignRight="@+id/search_cardImage"
            android:layout_alignBottom="@+id/search_cardImage" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/search_cardTitle"
            android:textColor="#f7f1f1"
            android:paddingBottom="4dp"
            android:paddingLeft="8dp"
            android:fontFamily="sans-serif-smallcaps"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="21sp"
            android:layout_above="@+id/search_shareButton"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="India won the series with 5-0"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/search_shareButton"
            android:src="@android:drawable/ic_menu_share"
            android:layout_marginRight="14dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_marginEnd="14dp"
            android:layout_alignTop="@+id/search_cardTimestamp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/search_cardTimestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#f9f5f5"
            android:ellipsize="end"
            android:paddingBottom="16dp"
            android:paddingLeft="16dp"
            android:paddingStart="16dp"
            android:text="1 day ago."
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="14sp"
            android:layout_alignBottom="@+id/search_cardImage"
            android:layout_toRightOf="@+id/search_cocLogo"
            android:layout_toEndOf="@+id/search_cocLogo" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/search_cocLogo"
            android:src="@drawable/coc_logo"
            android:paddingBottom="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_below="@+id/search_cardTitle"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
