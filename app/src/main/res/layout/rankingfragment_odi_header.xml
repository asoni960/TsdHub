<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    xmlns:tools="http://schemas.android.com/tools">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorAccent"
        android:layout_alignParentTop="true"
        android:id="@+id/view2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="4dp"
        tools:text="Title test text"
        android:textSize="17sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:id="@+id/rankingheader_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rankingheader_rank"
        android:textStyle="bold"
        android:text="Rank"
        android:layout_above="@+id/view1"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_below="@+id/rankingheader_title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rankingheader_country"
        android:text="Country"
        android:textStyle="bold"
        android:layout_alignTop="@+id/rankingheader_rank"
        android:layout_toLeftOf="@+id/rankingheader_rating"
        android:layout_toStartOf="@+id/rankingheader_rating"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rankingheader_name"
        android:text="Name"
        android:textStyle="bold"
        android:layout_alignTop="@+id/rankingheader_rank"
        android:layout_toRightOf="@+id/rankingheader_rank"
        android:layout_toEndOf="@+id/rankingheader_rank"
        android:layout_marginLeft="52dp"
        android:layout_marginStart="52dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rankingheader_rating"
        android:text="Rating"
        android:textStyle="bold"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="19dp"
        android:layout_marginEnd="19dp"
        android:layout_alignTop="@+id/rankingheader_country" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorAccent"
        android:layout_alignParentBottom="true"
        android:id="@+id/view1" />
</RelativeLayout>