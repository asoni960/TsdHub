<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rootView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@color/cardview_light_background"
    android:clickable="true">

    <TextView
        android:id="@+id/rankingTeam_rank"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="10"
        android:layout_alignBaseline="@+id/rankingTeam_country"
        android:layout_alignBottom="@+id/rankingTeam_country"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rankingTeam_ratings"
        android:text="123"
        android:layout_gravity="center"
        android:layout_alignBaseline="@+id/rankingTeam_points"
        android:layout_alignBottom="@+id/rankingTeam_points"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp" />

    <TextView
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        tools:text="New Zealand"
        android:id="@+id/rankingTeam_country"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/rankingTeam_rank"
        android:layout_toEndOf="@+id/rankingTeam_rank" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rankingTeam_points"
        android:text="5156"
        android:layout_gravity="center"
        android:layout_alignBaseline="@+id/rankingTeam_matches"
        android:layout_alignBottom="@+id/rankingTeam_matches"
        android:layout_toLeftOf="@+id/rankingTeam_ratings"
        android:layout_toStartOf="@+id/rankingTeam_ratings"
        android:layout_marginRight="42dp"
        android:layout_marginEnd="42dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/rankingTeam_matches"
        android:text="102"
        android:layout_alignBaseline="@+id/rankingTeam_country"
        android:layout_alignBottom="@+id/rankingTeam_country"
        android:layout_toRightOf="@+id/rankingTeam_country"
        android:layout_toEndOf="@+id/rankingTeam_country"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp" />


</RelativeLayout>