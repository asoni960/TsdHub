<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.abhinav.tsdhub">


    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"/>
    <uses-permission android:name="android.permission.SEND_SMS"/>
    <uses-permission android:name="android.permission.READ_CALL_LOG"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:name="realm.Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_bubble_chart_black"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">


        <activity
            android:name=".SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme">
        </activity>

        <activity android:name=".ArticleMain"
            android:theme="@style/AppTheme"/>

        <activity android:name=".Ranking_Main"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"/>

        <activity android:name=".Schedule_Main"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"/>

        <activity android:name=".ArticlePart2"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"/>

        <activity android:name=".GalleryPhotos"
        android:screenOrientation="portrait"
            android:theme="@style/AppTheme"/>

        <activity android:name=".ArticleSearch"
            android:screenOrientation="portrait"
            android:windowSoftInputMode = "stateVisible"
            android:theme="@style/AppTheme">

        </activity>
        <activity android:name="rest.Spinner"
            android:screenOrientation="portrait"/>

        <!--Realm activites-->


        <activity android:name="realm.Bookmark"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/SecondActivityTheme.Base"/>


    </application>

</manifest>